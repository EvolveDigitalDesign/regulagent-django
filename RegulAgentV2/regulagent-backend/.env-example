# =====================
# Global Application
# =====================
SECRET_KEY=change-me
DEBUG=1
ALLOWED_HOSTS=localhost,127.0.0.1
ENVIRONMENT=development

# Django settings module (overridden by compose)
DJANGO_SETTINGS_MODULE=ra_config.settings.development

# =====================
# Database (PostgreSQL)
# =====================
DB_NAME=regulagent
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# =====================
# Cache / Broker (Redis)
# =====================
REDIS_URL=redis://localhost:6379/0

# =====================
# AWS / Storage
# =====================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1
AWS_S3_APP_PREFIX=regulagent

# =====================
# OCR Provider Selection
#   options: textract | gdocai | auto
# =====================
OCR_PROVIDER=auto

# AWS Textract uses boto3 credentials above

# Google Document AI
GOOGLE_APPLICATION_CREDENTIALS=/app/.secrets/gcp-service-account.json
DOC_AI_PROJECT_ID=
DOC_AI_LOCATION=us
DOC_AI_PROCESSOR_ID=

# =====================
# Policy / Catalog Versions
# =====================
POLICY_PACK_VERSION=tx-w3a-2025.09
SLURRY_CATALOG_VERSION=2025.10.01

# =====================
# User-Specific Credentials (per-user overrides in DB recommended)
# These envs can be used for local dev or automation overrides
# =====================
RRC_USER_ID=
RRC_PASSWORD=

# =====================
# Optional Integrations
# =====================
OPENAI_API_KEY=

# =====================
# Tenancy
# =====================
TENANCY_MODE=row_rls


